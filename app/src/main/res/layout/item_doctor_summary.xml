<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_card_doctors_summary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="@dimen/_16"
        android:orientation="vertical"
        android:id="@+id/item_summary_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_weight="0.70"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/item_summary_title"/>
            <TextView
                android:gravity="right"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Issued"
                android:id="@+id/item_summary_issued"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_summary_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/_8"
            style="?android:attr/listSeparatorTextViewStyle"
            android:paddingTop="4dip"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

    </LinearLayout>



</LinearLayout>